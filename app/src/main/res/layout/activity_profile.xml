<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.activities.ProfileActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_labelName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Nome:"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#111"
        android:gravity="center_vertical"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"/>

     <TextView
         android:id="@+id/tv_name"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:text="Cristiano de Carvalho"
         android:textSize="22dp"
         android:textStyle="bold"
         android:textColor="#666"
         android:gravity="center_vertical"
         android:layout_marginStart="18dp"
         android:layout_marginEnd="18dp"
         android:layout_marginTop="0dp"
         android:layout_marginBottom="0dp"
         android:paddingTop="0dp"
         app:layout_constraintTop_toBottomOf="@id/tv_labelName"/>

        <TextView
            android:id="@+id/tv_labelUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="UsuÃ¡rio:"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#111"
            android:gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="cristiano"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#666"
        android:gravity="center_vertical"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"

        app:layout_constraintTop_toBottomOf="@id/tv_labelUsername"
        />

        <TextView
            android:id="@+id/tv_labelEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Email:"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#111"
            android:gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_username"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="cristianofilho@gmail.com"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#666"
        android:gravity="center_vertical"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toBottomOf="@id/tv_labelEmail"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@drawable/bg_normal"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        />



</RelativeLayout>